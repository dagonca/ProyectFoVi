<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
    </style>

    <style name="AuthBackground">
        <item name="android:background">@drawable/backgroundfobi_fill</item>
    </style>

    <style name="AuthLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/textViewSubtitle</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/login_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/login_vertical_padding</item>
        <item name="android:paddingRight">@dimen/login_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/login_horizontal_padding</item>
        <item name="android:background">@color/alphawhite</item>
    </style>

    <style name="btnSignStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/editTextLayout</item>
        <item name="android:background">@drawable/buttom_custom</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/passwordField</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
